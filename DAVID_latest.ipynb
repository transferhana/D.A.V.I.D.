   "source": [
    "import ipywidgets as widgets\n",
    "from IPython.display import display, clear_output\n",
    "import json\n",
    "from datetime import datetime\n",
    "from functools import partial\n",
    "import os\n",
    "\n",
    "# Ï†ÄÏû• Î¶¨Ïä§Ìä∏\n",
    "todo_items = []\n",
    "\n",
    "# Ïä§ÌÉÄÏùº ÏÑ§Ï†ï\n",
    "background_color = '#1e1e1e'  # Ïñ¥ÎëêÏö¥ Î∞∞Í≤Ω\n",
    "text_color = 'white'\n",
    "\n",
    "# Î†àÏù¥ÏïÑÏõÉ\n",
    "layout_full = widgets.Layout(width='100%')\n",
    "layout_half = widgets.Layout(width='48%')\n",
    "layout_button = widgets.Layout(width='100%', height='36px')\n",
    "layout_small_btn = widgets.Layout(width='48%', height='36px')\n",
    "\n",
    "style = {'description_width': '80px'}\n",
    "\n",
    "# Ï†ÑÏ≤¥ ÏßÑÌñâÎ•†\n",
    "overall_progress_bar = widgets.FloatProgress(min=0, max=100, value=0,\n",
    "    layout=widgets.Layout(width='100%', height='20px'),\n",
    "    style={'bar_color': 'black'})\n",
    "overall_progress_label = widgets.Label(value='(0%)')\n",
    "\n",
    "def get_progress_color(progress):\n",
    "    grey_value = int(255 * (1 - progress / 100))\n",
    "    return f'rgb({grey_value}, {grey_value}, {grey_value})'\n",
    "\n",
    "def update_overall_progress():\n",
    "    if not todo_items:\n",
    "        overall_progress_bar.value = 0\n",
    "        overall_progress_label.value = '(0%)'\n",
    "        return\n",
    "    avg = sum(i['progress'] for i in todo_items) / len(todo_items)\n",
    "    overall_progress_bar.value = avg\n",
    "    overall_progress_label.value = f"({int(avg)}%)"\n",
    "\n",
    "def refresh_list():\n",
    "    todo_list_box.children = []\n",
    "    for idx, item in enumerate(todo_items, start=1):\n",
    "        title = widgets.Label(value=f"# {idx}. {item['title']}")\n",
    "        progress_bar = widgets.FloatProgress(value=item['progress'], min=0, max=100,\n",
    "            layout=widgets.Layout(width='100%', height='16px'),\n",
    "            style={'bar_color': get_progress_color(item['progress'])})\n",
    "        progress_slider = widgets.IntSlider(value=item['progress'], min=0, max=100, step=1,\n",
    "            layout=widgets.Layout(width='100%'), style=style)\n",
    "        percent_label = widgets.Label(value=f"{item['progress']}%")\n",
    "\n",
    "        def on_slider_change(change, i=item, bar=progress_bar, percent=percent_label):\n",
    "            i['progress'] = change['new']\n",
    "            bar.value = change['new']\n",
    "            bar.style.bar_color = get_progress_color(change['new'])\n",
    "            percent.value = f"{change['new']}%"\n",
    "            update_overall_progress()\n",
    "\n",
    "        progress_slider.observe(on_slider_change, names='value')\n",
    "\n",
    "        due_label = widgets.Label(value=f"ÎßàÍ∞êÏùº {item['due'].strftime('%Y-%m-%d') if item['due'] else '-'}")\n",
    "        priority_label = widgets.Label(value=f"Ï§ëÏöîÎèÑ {item['priority']}")\n",
    "\n",
    "        complete_btn = widgets.Button(description='ÏôÑÎ£å‚úÖ', layout=layout_small_btn,\n",
    "                                     style={'button_color': '#dddddd'})\n",
    "        delete_btn = widgets.Button(description='ÏÇ≠Ï†ú‚ùå', layout=layout_small_btn,\n",
    "                                     style={'button_color': '#dddddd'})\n",
    "\n",
    "        def on_complete_clicked(b, i=item):\n",
    "            i['progress'] = 100\n",
    "            update_overall_progress()\n",
    "            refresh_list()\n",
    "\n",
    "        def on_delete_clicked(b, i=item):\n",
    "            todo_items.remove(i)\n",
    "            update_overall_progress()\n",
    "            refresh_list()\n",
    "\n",
    "        complete_btn.on_click(partial(on_complete_clicked, i=item))\n",
    "        delete_btn.on_click(partial(on_delete_clicked, i=item))\n",
    "\n",
    "        task_box = widgets.VBox([\n",
    "            title,\n",
    "            progress_bar,\n",
    "            widgets.HBox([progress_slider, percent_label]),\n",
    "            widgets.HBox([due_label, priority_label], layout=layout_full),\n",
    "            widgets.HBox([complete_btn, delete_btn], layout=layout_full)\n",
    "        ], layout=widgets.Layout(border='1px solid #ccc', padding='10px'))\n",
    "\n",
    "        todo_list_box.children += (task_box,)\n",
    "\n",
    "# ÏûÖÎ†•\n",
    "title_input = widgets.Text(placeholder='Ìï† Ïùº ÏûÖÎ†•', layout=layout_full)\n",
    "progress_input = widgets.IntSlider(value=0, min=0, max=100, layout=layout_full, style=style)\n",
    "due_input = widgets.DatePicker(layout=layout_full, style=style)\n",
    "priority_input = widgets.Dropdown(options=['ÎÇÆÏùå', 'Î≥¥ÌÜµ', 'ÎÜíÏùå'], value='Î≥¥ÌÜµ', layout=layout_full)\n",
    "add_btn = widgets.Button(description='Ï∂îÍ∞Ä', layout=layout_full, style={'button_color': '#2e7d32'})\n",
    "\n",
    "def on_add_clicked(b):\n",
    "    if not title_input.value.strip(): return\n",
    "    todo_items.append({\n",
    "        'title': title_input.value.strip(),\n",
    "        'progress': progress_input.value,\n",
    "        'due': due_input.value,\n",
    "        'priority': priority_input.value\n",
    "    })\n",
    "    title_input.value = ''\n",
    "    progress_input.value = 0\n",
    "    due_input.value = None\n",
    "    priority_input.value = 'Î≥¥ÌÜµ'\n",
    "    update_overall_progress()\n",
    "    refresh_list()\n",
    "\n",
    "add_btn.on_click(on_add_clicked)\n",
    "\n",
    "# Ï†ÄÏû•/Î∂àÎü¨Ïò§Í∏∞\n",
    "def save_data(b):\n",
    "    with open('todo_data.json', 'w') as f:\n",
    "        json.dump([{**i, 'due': i['due'].strftime('%Y-%m-%d') if i['due'] else None} for i in todo_items], f)\n",
    "\n",
    "def load_data(b):\n",
    "    try:\n",
    "        with open('todo_data.json') as f:\n",
    "            raw = json.load(f)\n",
    "            todo_items.clear()\n",
    "            for i in raw:\n",
    "                todo_items.append({\n",
    "                    'title': i['title'],\n",
    "                    'progress': i['progress'],\n",
    "                    'due': datetime.strptime(i['due'], '%Y-%m-%d') if i['due'] else None,\n",
    "                    'priority': i['priority']\n",
    "                })\n",
    "            update_overall_progress()\n",
    "            refresh_list()\n",
    "    except: pass\n",
    "\n",
    "save_btn = widgets.Button(description='Ï†ÄÏû•', layout=layout_half, style={'button_color': '#00838f'})\n",
    "load_btn = widgets.Button(description='Î∂àÎü¨Ïò§Í∏∞', layout=layout_half, style={'button_color': '#ef6c00'})\n",
    "save_btn.on_click(save_data)\n",
    "load_btn.on_click(load_data)\n",
    "\n",
    "todo_list_box = widgets.VBox()\n",
    "\n",
    "app_ui = widgets.VBox([\n",
    "    widgets.HTML('<h3 style="color:white">üìÅ DAVID mk33</h3>'),\n",
    "    title_input, progress_input, due_input, priority_input, add_btn,\n",
    "    widgets.HBox([save_btn, load_btn]),\n",
    "    widgets.Label(value='ÏµúÏ¢Ö ÏßÑÌñâÎ•†', layout=layout_full, style={'description_width': 'initial'}),\n",
    "    widgets.HBox([overall_progress_bar, overall_progress_label]),\n",
    "    todo_list_box\n",
    "], layout=widgets.Layout(padding='10px', background_color=background_color))\n",
    "\n",
    "display(app_ui)\n",
    "update_overall_progress()\n",
    "refresh_list()"
   ]
  }
