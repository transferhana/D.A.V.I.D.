    "import ipywidgets as widgets\n",
    "from IPython.display import display, clear_output\n",
    "import json\n",
    "from datetime import datetime\n",
    "import os\n",
    "\n",
    "todo_items = []\n",
    "\n",
    "layout_input = widgets.Layout(width='100%')\n",
    "layout_button_half = widgets.Layout(width='48%', height='36px')\n",
    "layout_button_full = widgets.Layout(width='100%', height='36px')\n",
    "layout_bar = widgets.Layout(width='100%', height='20px')\n",
    "\n",
    "overall_bar = widgets.FloatProgress(min=0, max=100, value=0, layout=layout_bar)\n",
    "overall_label = widgets.Label(value='(0%)')\n",
    "overall_text = widgets.HTML(value='<b>ÏµúÏ¢Ö ÏßÑÌñâÎ•†</b>', layout=widgets.Layout(justify_content='center'))\n",
    "\n",
    "todo_list_box = widgets.VBox(layout=widgets.Layout(width='100%', overflow_x='hidden'))\n",
    "\n",
    "def update_overall():\n",
    "    if not todo_items:\n",
    "        overall_bar.value = 0\n",
    "        overall_label.value = '(0%)'\n",
    "        return\n",
    "    avg = sum(i['progress'] for i in todo_items) / len(todo_items)\n",
    "    overall_bar.value = avg\n",
    "    overall_label.value = f"{int(avg)}%"\n",
    "\n",
    "def refresh_list():\n",
    "    todo_list_box.children = []\n",
    "    for idx, item in enumerate(todo_items):\n",
    "        title = item['title']\n",
    "        header = widgets.HTML(f"<b># {idx+1}. {title}</b>")\n",
    "\n",
    "        bar = widgets.FloatProgress(value=item['progress'], min=0, max=100, layout=layout_bar)\n",
    "        shade = int(255 - (item['progress'] / 100) * 255)\n",
    "        bar.bar_style = ''\n",
    "        bar.style = {'bar_color': f'rgb({shade},{shade},{shade})'}\n",
    "        slider = widgets.IntSlider(value=item['progress'], min=0, max=100, step=5, layout=layout_input)\n",
    "        percent_label = widgets.Label(value=f"{item['progress']}%")\n",
    "\n",
    "        def on_slider(change, i=item, b=bar, l=percent_label):\n",
    "            i['progress'] = change['new']\n",
    "            b.value = change['new']\n",
    "            shade = int(255 - (change['new'] / 100) * 255)\n",
    "            b.style = {'bar_color': f'rgb({shade},{shade},{shade})'}\n",
    "            l.value = f"{change['new']}%"\n",
    "            update_overall()\n",
    "\n",
    "        slider.observe(on_slider, names='value')\n",
    "\n",
    "        due = widgets.Label(value=item['due'].strftime('%Y-%m-%d'))\n",
    "        priority = widgets.Label(value=item['priority'])\n",
    "\n",
    "        complete = widgets.Button(description='ÏôÑÎ£å‚úÖ', layout=layout_button_half)\n",
    "        delete = widgets.Button(description='ÏÇ≠Ï†ú‚ùå', layout=layout_button_half)\n",
    "\n",
    "        def on_complete(btn, i=item):\n",
    "            i['progress'] = 100\n",
    "            refresh_list()\n",
    "            update_overall()\n",
    "\n",
    "        def on_delete(btn, i=item):\n",
    "            todo_items.remove(i)\n",
    "            refresh_list()\n",
    "            update_overall()\n",
    "\n",
    "        complete.on_click(on_complete)\n",
    "        delete.on_click(on_delete)\n",
    "\n",
    "        row = widgets.VBox([\n",
    "            header,\n",
    "            widgets.HBox([widgets.Label('ÏßÑÌñâÎ•†'), bar]),\n",
    "            widgets.HBox([slider, percent_label]),\n",
    "            widgets.HBox([widgets.Label('ÎßàÍ∞êÏùº'), due]),\n",
    "            widgets.HBox([widgets.Label('Ï§ëÏöîÎèÑ'), priority]),\n",
    "            widgets.HBox([complete, delete], layout=widgets.Layout(justify_content='center'))\n",
    "        ], layout=widgets.Layout(border='1px solid #ccc', padding='10px'))\n",
    "\n",
    "        todo_list_box.children += (row,)\n",
    "\n",
    "title_input = widgets.Text(placeholder='Ìï† Ïùº ÏûÖÎ†•', layout=layout_input)\n",
    "progress_input = widgets.IntSlider(min=0, max=100, step=5, layout=layout_input)\n",
    "due_input = widgets.DatePicker(layout=layout_input)\n",
    "priority_input = widgets.Dropdown(options=['ÎÇÆÏùå', 'Î≥¥ÌÜµ', 'ÎÜíÏùå'], value='Î≥¥ÌÜµ', layout=layout_input)\n",
    "add_btn = widgets.Button(description='Ï∂îÍ∞Ä', button_style='success', layout=layout_button_full)\n",
    "\n",
    "def add_task(b):\n",
    "    if not title_input.value:\n",
    "        return\n",
    "    todo_items.append({\n",
    "        'title': title_input.value,\n",
    "        'progress': progress_input.value,\n",
    "        'due': due_input.value or datetime.today().date(),\n",
    "        'priority': priority_input.value\n",
    "    })\n",
    "    title_input.value = ''\n",
    "    progress_input.value = 0\n",
    "    due_input.value = None\n",
    "    priority_input.value = 'Î≥¥ÌÜµ'\n",
    "    refresh_list()\n",
    "    update_overall()\n",
    "\n",
    "add_btn.on_click(add_task)\n",
    "\n",
    "def save(b):\n",
    "    with open('todo_data.json', 'w') as f:\n",
    "        json.dump([{**i, 'due': i['due'].strftime('%Y-%m-%d')} for i in todo_items], f)\n",
    "\n",
    "def load(b):\n",
    "    if os.path.exists('todo_data.json'):\n",
    "        with open('todo_data.json') as f:\n",
    "            raw = json.load(f)\n",
    "            todo_items.clear()\n",
    "            for i in raw:\n",
    "                todo_items.append({\n",
    "                    'title': i['title'],\n",
    "                    'progress': i['progress'],\n",
    "                    'due': datetime.strptime(i['due'], '%Y-%m-%d').date(),\n",
    "                    'priority': i['priority']\n",
    "                })\n",
    "        refresh_list()\n",
    "        update_overall()\n",
    "\n",
    "save_btn = widgets.Button(description='Ï†ÄÏû•', layout=layout_button_half, button_style='info')\n",
    "load_btn = widgets.Button(description='Î∂àÎü¨Ïò§Í∏∞', layout=layout_button_half, button_style='warning')\n",
    "save_btn.on_click(save)\n",
    "load_btn.on_click(load)\n",
    "\n",
    "display(widgets.VBox([\n",
    "    widgets.HTML('<h3>üìÅ DAVID mk29</h3>'),\n",
    "    widgets.HBox([widgets.Label('Ìï† Ïùº'), title_input]),\n",
    "    widgets.HBox([widgets.Label('ÏßÑÌñâÎ•†'), progress_input]),\n",
    "    widgets.HBox([widgets.Label('ÎßàÍ∞êÏùº'), due_input]),\n",
    "    widgets.HBox([widgets.Label('Ï§ëÏöîÎèÑ'), priority_input]),\n",
    "    add_btn,\n",
    "    widgets.HBox([save_btn, load_btn]),\n",
    "    overall_text,\n",
    "    widgets.HBox([overall_bar, overall_label]),\n",
    "    todo_list_box\n",
    "]))\n",
    "refresh_list()\n",
    "update_overall()"
   ]
  }
 ],
