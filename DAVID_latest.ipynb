    "        overall_progress_bar.value = 0\n",
    "        overall_progress_label.value = \"(0%)\"\n",
    "        return\n",
    "    avg = sum(i['progress'] for i in todo_items) / len(todo_items)\n",
    "    overall_progress_bar.value = avg\n",
    "    overall_progress_label.value = f\"({int(avg)}%)\"\n"
